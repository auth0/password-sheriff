{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "sourceMap": true
  },
  "include": [
    "lib/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}
